<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kri.cat2.Settings"
    android:background="@color/colorPrimary">

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_above="@+id/label1" />

    <TextView
        android:text="Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label2"
        android:textColor="@color/colorAccent"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label1"
        android:backgroundTint="@color/colorAccent"
        android:autoText="false"
        android:textColor="@color/colorAccent"
        android:layout_alignEnd="@+id/button" />

    <CheckBox
        android:text="Sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SoundBox"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textnumero"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Insert here"
        android:ems="10"
        android:id="@+id/textnome"
        android:layout_marginTop="19dp"
        android:layout_alignTop="@+id/btn_save"
        android:layout_alignStart="@+id/label2" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_save"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/label1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="42dp"
        android:onClick="btnReadWrite" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:id="@+id/textnumero"
        android:text="Insert here"
        android:layout_below="@+id/label2"
        android:layout_alignParentStart="true" />

</RelativeLayout>
